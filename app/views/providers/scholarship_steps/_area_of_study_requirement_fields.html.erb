<div class="nested-fields">
  <div class="area-of-study">
    <div class="col-x15">
      <%= f.select :aos_type, AreaOfStudyRequirement.aos_types.map { |k,v| [k.humanize, k] } %>
    </div>

    <% if defined?(i) && i == 0 %>
      <div class="col-x15">
        <%= scholarship_form.check_box :collect_aos %>
        <%= scholarship_form.label :collect_aos, 'No Area of Study Requirement, but I want students to indicate for the purpose of data collection', class: 'inline-label' %>
      </div>
    <% else %>
      <div class="comment">
        <%= link_to_remove_association "X", f, class: 'delete-association-btn' %>
      </div>
    <% end %>
    </div>
</div>
