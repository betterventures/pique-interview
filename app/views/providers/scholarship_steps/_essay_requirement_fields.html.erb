<% i ||= 0; i += 1 # define the index of the EssayRequirement for the label %>

<div class="nested-fields essay-requirement-container">
  <div class="row">
    <div class="field required">
      <%= f.label :prompt, "Essay ##{i} Prompt" %>
      <div class="col-container">
        <div class="col-x3">
          <%= f.text_area :prompt,
            required: true,
            class: "full",
            placeholder: "Enter your scholarship's prompt here"
          %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="field required">
      <%= f.label :word_limit, "Essay ##{i} Word Limit" %>
      <div class="col-container">
        <div class="col">
          <%= f.text_field :word_limit,
            required: true,
            placeholder: "e.g., 100; 100 - 500"
          %>
        </div>
        <div class="col-x2 comment">
          Keep in mind that ~250 words is equivalent to one typed page, double spaced.
        </div>
      </div>
    </div>
  </div>

  <div class="hidden delete-req-btn-container">
    <%= link_to_remove_association "Delete", f, class: 'delete-req-btn' %>
  </div>
</div>

