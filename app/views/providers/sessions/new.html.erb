<div class="auth-root">

  <div class="signin-root">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="header">
      </div>

      <div class="notify">
        <%= devise_error_messages! %>
      </div>

      <div class="row">
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Enter your email", class: "full" %>
        </div>
      </div>

      <div class="row">
        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password #{@minimum_password_length ? '(' + @minimum_password_length.to_s + ' character minimum)' : ''}", class: "full" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <div class="checkbox-container">
            <%= f.check_box :remember_me, class: "checkbox" %>
            <%= f.label :remember_me, class: "checkbox-label" %>
          </div>
        </div>
        <br />
      <% end -%>

      <div class="btns">
        <%= f.submit "Log In", class: "btn submit" %>
        <%= link_to "Need an account?", new_provider_registration_path, class: "btn switch" %>
      </div>

      <div class="password">
        <%= link_to "Forget the password?", new_provider_password_path %><br />
      </div>

    <% end %>

  </div>
</div>
