<% content_for :form_header do %>
  <p class="form-title">Who is this scholarship intended for?</p>
  <p class="form-subtitle">This helps us determine which students see your scholarship</p>
  <p class="form-legend">* Required</p>
<% end %>

<%= render layout: 'form' do |f| %>
  <div class="row">
    <div class="field required">
      <%= f.label 'School Year Requirement' %>
      <%= f.check_box :for_hs_freshman %> <%= f.label 'High School Freshman' %>
      <%= f.check_box :for_hs_junior %> <%= f.label 'High School Junior' %>
      <br>
      <%= f.check_box :for_hs_sophomore %> <%= f.label 'High School Sophomore' %>
      <%= f.check_box :for_hs_senior %> <%= f.label 'High School Senior' %>
    </div>
  </div>

  <div class="row">
    <div class="field required">
      <%= f.label 'U.S. Citizenship Requirement' %>
      <%= f.label 'Yes' %> <%= f.radio_button :for_us_citizen, true %>
      <%= f.label 'No' %> <%= f.radio_button :for_us_citizen, false %>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label 'Maximum Family Income' %>
      <%= f.number_field :maximum_family_income, class: "word" %>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label 'Gender Requirement' %>
      <%= f.check_box :for_male %> <%= f.label 'Male' %>
      <%= f.check_box :for_female %> <%= f.label 'Female' %>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label 'Race/Ethnicity Requirements' %>
      <%= f.check_box :for_black_people %> <%= f.label 'Black/African-American' %>
      <%= f.check_box :for_white_people %> <%= f.label 'White/Caucasian' %>
      <br>
      <%= f.check_box :for_asian_people %> <%= f.label 'Asian/Pacific Islander' %>
      <%= f.check_box :for_hispanic_people %> <%= f.label 'Hispanic/Latino' %>
      <br>
      <%= f.check_box :for_native_people %> <%= f.label 'Native American' %>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label 'Degree/Program Type Sought' %>
      <%= f.check_box :for_two_year_program %> <%= f.label '2 Year Program' %>
      <%= f.check_box :for_four_year_program %> <%= f.label '4 Year Program' %>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.fields_for :area_of_study_requirements, AreaOfStudyRequirement.new do |area_of_study_requirement| %>
        <%= f.label 'Area of Study Requirements' %>
        <%= render 'area_of_study_requirement_fields', f: area_of_study_requirement %>
      <% end %>
      <div class="comment">
        <%= link_to_add_association 'Add another Area of Study Requirement', f, :area_of_study_requirements %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label 'Community Service Requirement' %>
      <%= f.label 'Yes' %> <%= f.radio_button :requires_community_service, true %>
      <%= f.label 'No' %> <%= f.radio_button :requires_community_service, false %>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label :minimum_community_service, "Minimum Hours" %>
      <%= f.number_field :minimum_community_service %>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.fields_for :location_limitations, LocationLimitation.new do |location_limitation| %>
        <%= render 'location_limitation_fields', f: location_limitation %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'Add another location', f, :location_limitations %>
      </div>
    </div>
  </div>
<% end %>
